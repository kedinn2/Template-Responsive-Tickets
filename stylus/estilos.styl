#left-menu-trigger, #navbar {
  float: left;
  display: block;
  width: 50px;
  height: 50px;
  cursor: pointer;
}
#right-menu-trigger {
  float: right;
}

#left-menu {
  position: fixed;
  top: 50px;
  bottom: 0;
  left: -270px;
  width: 270px;
  background: #ED3A5F;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-transition: -webkit-transform 300ms;
          transition: transform 300ms;
  z-index: 999;
}

#left-menu ul li a {
    text-decoration: none;
    color: white; 
    padding: 10.5px 25px;
    display:block;
}
#left-menu ul a:hover {
    background: #EA2C53;
}
#left-menu ul {
    margin: 0; 
    padding: 0;
    width:100%;
    list-style-type: none;
}

#right-menu {
  left: auto;
  right: -270px;
}

.push-270-to-right {
  -webkit-transform: translate3d(270px, 0, 0);
          transform: translate3d(270px, 0, 0);
}

.push-270-to-left {
  -webkit-transform: translate3d(-270px, 0, 0);
          transform: translate3d(-270px, 0, 0);
}




