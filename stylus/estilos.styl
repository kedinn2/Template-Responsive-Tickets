.main-event
	background rgba(0, 0, 0, 0.47)
	height 400px
	position relative
	p
		margin-top 20px
		padding 0
		color white
.image-main-event
	width 100%
	position absolute
	top 0
	z-index -50
.event-container
	padding-top 3em
	margin 0 auto
.main-event-title , .main-event-date
	text-transform uppercase
	text-align center
.main-event-title
	font-weight 500
	font-size 3.1rem
.main-event-date
	font-size 2.3rem
	&:before
		content "═════"
	&:after
		content "═════"
.date-count
	font-size 2em
	text-align center
	color white
.search-event

	position relative
	margin 2em auto
	moz-border-radius 50px
	-webkit-border-radius 50px
	border-radius 50px
	margin-top -50px
	padding 20px
	background #e4e9eb
	max-width 700px
	input[type="text"]
		-webkit-box-sizing border-box
		-moz-box-sizing: border-box
		box-sizing border-box
		-moz-border-radius 50px
		-webkit-border-radius 50px
		border-radius 50px
		-webkit-box-shadow: inset 0px 0px 0px 1px rgba(255,255,255,0.1)
		box-shadow inset 0px 0px 0px 1px rgba(255,255,255,0.1)
		background-color: rgba(255,255,255,0.03)
		border 6px solid #d8143c
		height 70px
		color #2a3237
		float none
		font-size 18px
		text-indent 20px
		padding 0px 6px
		width: 100%
		&:focus
			outline 0px
	button
		position absolute
		right 1em
		width 50px
		height 50px
		border 0
		background #d8143c
		color #fff
		font-size 2em
		border-radius 50%
		top 30px
		&:focus
			outline 0px
		&:hover
			background #d8143c
